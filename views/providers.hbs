		<section class="full-width header-well">

			<div class="full-width header-well-text">

			</div>
		</section>

		{{!-- CRUD --}}
		<div id="wrapper">
			<div id="content-wrapper" class="d-flex flex-column">
				<div id="content">
					<div class="container-fluid">
						<div class="card shadow mb-4">
							<div class="card-header py-3 d-flex justify-content-between">
								<h1>Proveedores</h1>
								<h6 class="m-0 font-weight-bold text-primary"></h6>
								<button type="button" class="btn btn-success" data-bs-toggle="modal"
									data-bs-target="#createModal">
									<i class="bi bi-person-plus"></i> Agregar</button>
							</div>

							<div class="card-body text-center">
								<div class="table-responsive">
									<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
										<thead>
											<tr>
												<th>NIT</th>
												<th>NOMBRE</th>
												<th>DIRECCIÓN</th>
												<th>TELÉFONO</th>
												<th>ENCARGADO</th>
												<th>HORARIO</th>
												<th>ESTADO</th>
												<th>EDITAR</th>
											</tr>
										</thead>
										<tbody>
											<tr>
												<td>001</td>
												<td>Colanta</td>
												<td>Cra 45 #20</td>
												<td>5683122</td>
												<td>Luis Bonilla</td>
												<td>7:00 AM - 8:00 AM L/V</td>
												<td>
													<div class="form-check form-switch m-1">
														<div class="form-check form-switch m-3">
															<input class="form-check-input" type="checkbox"
																role="switch" checked onchange="confirmStateChange()">
														</div>
													</div>
												</td>
												<td>
													<button class="btn btn-warning p-2" data-bs-toggle="modal"
														data-bs-target="#editModal"><i class="bi bi-pen"></i>
													</button>
												</td>
											</tr>
											<tr>
												<td>002</td>
												<td>Empresa XYZ</td>
												<td>Calle 123, Ciudad ABC</td>
												<td>123-456-7890</td>
												<td>Juan Pérez</td>
												<td>9:00 AM - 5:00 PM M/J</td>
												<td>
													<div class="form-check form-switch m-1">
														<div class="form-check form-switch m-3">
															<input class="form-check-input" type="checkbox"
																role="switch" checked onchange="confirmStateChange()">
														</div>
													</div>
												</td>
												<td>
													<button class="btn btn-warning p-2" data-bs-toggle="modal"
														data-bs-target="#editModal"><i class="bi bi-pen"></i>
													</button>
												</td>
											</tr>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
					<!-- /.container-fluid -->
				</div>
				<!-- End of Main Content -->
			</div>
			<!-- End of Content Wrapper -->
		</div>

	</section>

	{{!-- ------------------------------------------- MODAL CREATE ------------------------------------------ --}}
	<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Nuevo proveedor</h1>
				</div>

				<div class="modal-body">

					<form class="row g-3 form">
						<div class="col-md-6">
							<label for="inputNit" class="form-label">NIT</label>
							<input type="text" class="form-control" id="nit1" pattern="[0-9]+" required>
						</div>
						<div class="col-md-6">
							<label for="inputPhone" class="form-label">Teléfono</label>
							<input type="text" class="form-control" id="phone1" pattern="[0-9]+"
								title="Ingrese solo números" required>
						</div>
						<div class="col-md-6">
							<label for="inputName" class="form-label">Nombre de la Empresa</label>
							<input type="text" class="form-control" id="name1" pattern="[A-Za-z\s.,]+" required>
						</div>
						<div class="col-md-6">
							<label for="inputSeller" class="form-label">Nombre del vendedor</label>
							<input type="text" class="form-control" id="Seller1" pattern="[A-Za-z\s]+" required>
						</div>
						<div class="col-md-12">
							<label for="inputAddress" class="form-label">Dirección</label>
							<input type="text" class="form-control" id="address1" required>
						</div>

						<div class="row">
							<div class="col-md-12 mt-3 text-center">
								<label for="inputState" class="form-label margin-top-3 ">Horario</label>
							</div>

							<div class="col-md-3">
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="defaultCheck8">
									<label class="form-check-label" for="defaultCheck1">
										Lunes
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="defaultCheck9">
									<label class="form-check-label" for="defaultCheck2">
										Martes
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="defaultCheck10">
									<label class="form-check-label" for="defaultCheck3">
										Miércoles
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="defaultCheck11">
									<label class="form-check-label" for="defaultCheck4">
										Jueves
									</label>
								</div>
							</div>

							<div class="col-md-3">
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="defaultCheck12">
									<label class="form-check-label" for="defaultCheck5">
										Viernes
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="defaultCheck13">
									<label class="form-check-label" for="defaultCheck6">
										Sábado
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="defaultCheck14">
									<label class="form-check-label" for="defaultCheck7">
										Domingo
									</label>
								</div>
							</div>

							<div class="col-md-6">
								<!-- Campos de hora -->
								<div class="row">
									<div class="col-md-12">
										<label for="inputState" class="form-label">Desde</label>
										<input type="time" id="start-time1" class="form-control">
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<label for="inputState" class="form-label">Hasta</label>
										<input type="time" id="end-time1" class="form-control">
									</div>
								</div>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
							<button class="btn btn-primary submit-button" type="submit">Guardar</button>
						</div>
					</form>

				</div>
			</div>

		</div>
	</div>

