</head>

<body>
	<!-- Notifications area -->
	{{>notifications }}
	<!-- navBar -->
	{{>navBar }}
	<!-- navLateral -->
	{{>navLateral }}

	{{!-- ------------------------------------------- PAGE CONTENT ------------------------------------------ --}}
	<section class="full-width pageContent">

		{{!-- CRUD --}}
		<div class="mt-4" id="wrapper">
			<div id="content-wrapper" class="d-flex flex-column">
				<div id="content">
					<div class="container-fluid">
						<div class="card shadow mb-4">
							<div class="card-header py-3 d-flex justify-content-between">

								<h1>Proveedores</h1>
								<h6 class="m-0 font-weight-bold text-primary"></h6>

								<button type="button" class="btn btn-success" data-bs-toggle="modal"
									data-bs-target="#createModal">
									<i class="bi bi-truck"></i> Agregar</button>
							</div>

							<div class="card-body text-center">
								<div class="table-responsive">
									<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
										<thead>
											<tr>
												<th>NIT</th>
												<th>NOMBRE</th>
												<th>DIRECCIÓN</th>
												<th>TELÉFONO</th>
												<th>ENCARGADO</th>
												<th>HORARIO</th>
												<th>ACCIONES</th>
											</tr>
										</thead>
										<tbody>
											<tr>
												<td>001</td>
												<td>Colanta</td>
												<td>Cra 45 #20</td>
												<td>5683122</td>
												<td>Luis Bonilla</td>
												<td>7:00 AM - 8:00 AM L/V</td>
												<td class="align-middle text-center">
													<div
														style="display: flex; justify-content: center; align-items: center;">
														<div style="margin-right: 10px;">
															<div class="form-check form-switch ">
																<input class="form-check-input" type="checkbox"
																	role="switch" checked
																	onclick="alertSuccesClients()">
															</div>
														</div>
														<button class="btn btn-warning p-2" data-bs-toggle="modal"
															data-bs-target="#editModal">
															<i class="bi bi-pen"></i>
														</button>
													</div>
												</td>
											</tr>
											<tr>
												<td>002</td>
												<td>Empresa XYZ</td>
												<td>Calle 123, Ciudad ABC</td>
												<td>123-456-7890</td>
												<td>Juan Pérez</td>
												<td>9:00 AM - 5:00 PM M/J</td>
												<td class="align-middle text-center">
													<div
														style="display: flex; justify-content: center; align-items: center;">
														<div style="margin-right: 10px;">
															<div class="form-check form-switch ">
																<input class="form-check-input" type="checkbox"
																	role="switch" checked
																	onclick="alertSuccesClients()">
															</div>
														</div>
														<button class="btn btn-warning p-2" data-bs-toggle="modal"
															data-bs-target="#editModal">
															<i class="bi bi-pen"></i>
														</button>
													</div>
												</td>
											</tr>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
					<!-- /.container-fluid -->
				</div>
				<!-- End of Main Content -->
			</div>
			<!-- End of Content Wrapper -->
		</div>

	</section>

	{{!-- ------------------------------------------- MODAL CREATE ------------------------------------------ --}}
	<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Nuevo proveedor</h1>
				</div>

				<div class="modal-body">

					<form class="needs-validation row g-3 form" novalidate>
						<div class="col-md-6">
							<label for="inputNit" class="form-label">NIT<span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="nit1" pattern="[0-9]+" required>
							<div class="invalid-feedback">Por favor ingresa un NIT válido.</div>
						</div>
						<div class="col-md-6">
							<label for="inputPhone" class="form-label">Teléfono<span
									class="text-danger">*</span></label>
							<input type="text" class="form-control" id="phone1" pattern="[0-9]+"
								title="Ingrese solo números" required>
							<div class="invalid-feedback">Por favor ingresa un número válido.</div>
						</div>
						<div class="col-md-6">
							<label for="inputName" class="form-label">Nombre de la Empresa <span
									class="text-danger">*</span></label>
							<input type="text" class="form-control" id="name1" pattern="[A-Za-z\s.,]+" required>
							<div class="invalid-feedback">Por favor ingresa un nombre de empresa válido.</div>
						</div>
						<div class="col-md-6">
							<label for="inputSeller" class="form-label">Nombre del vendedor</label>
							<input type="text" class="form-control" id="Seller1" pattern="[A-Za-z\s]+">
							<div class="invalid-feedback">Por favor ingresa un nombre válido.</div>
						</div>
						<div class="col-md-12">
							<label for="inputAddress" class="form-label">Dirección de la empresa <span
									class="text-danger">*</span></label>
							<input type="text" class="form-control" id="address1" required>
							<div class="invalid-feedback">Por favor ingresa una dirección válida.</div>
						</div>
						{{!-- ------------------------------------------ --}}
						<!-- Dentro del cuerpo de tu formulario -->
						<div class="col-12">
							<div class="form-group">

								<div id="horarioContainer">
									<div class="row">
										<button type="button" class="btn btn-primary col-4 m-3"
											id="agregarHorario">Agregar
											Horario</button>
									</div>
								</div>
							</div>
						</div>

						{{!-- -------------------------------------------- --}}
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
							<button class="btn btn-primary submit-button" type="submit">Guardar</button>
						</div>
					</form>

				</div>
			</div>

		</div>
	</div>

	{{!-- ------------------------------------------- MODAL EDIT -------------------------------------------- --}}
	<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">

		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Editar proveedor</h1>
				</div>
				<div class="modal-body">

					<form class="needs-validation row g-3 form" novalidate>
						<div class="col-md-6">
							<label for="inputNit" class="form-label">NIT<span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="nit1" pattern="[0-9]+" required>
							<div class="invalid-feedback">Por favor ingresa un NIT válido.</div>
						</div>
						<div class="col-md-6">
							<label for="inputPhone" class="form-label">Teléfono<span
									class="text-danger">*</span></label>
							<input type="text" class="form-control" id="phone1" pattern="[0-9]+"
								title="Ingrese solo números" required>
							<div class="invalid-feedback">Por favor ingresa un número válido.</div>
						</div>
						<div class="col-md-6">
							<label for="inputName" class="form-label">Nombre de la Empresa <span
									class="text-danger">*</span></label>
							<input type="text" class="form-control" id="name1" pattern="[A-Za-z\s.,]+" required>
							<div class="invalid-feedback">Por favor ingresa un nombre de empresa válido.</div>
						</div>
						<div class="col-md-6">
							<label for="inputSeller" class="form-label">Nombre del vendedor</label>
							<input type="text" class="form-control" id="Seller1" pattern="[A-Za-z\s]+">
							<div class="invalid-feedback">Por favor ingresa un nombre válido.</div>
						</div>
						<div class="col-md-12">
							<label for="inputAddress" class="form-label">Dirección de la empresa <span
									class="text-danger">*</span></label>
							<input type="text" class="form-control" id="address1" required>
							<div class="invalid-feedback">Por favor ingresa una dirección válida.</div>
						</div>
						{{!-- ------------------------------------------ --}}
						<!-- Dentro del cuerpo de tu formulario -->
						<div class="col-12">
							<div class="form-group">
								<div class="col-md-12 text-center">
									<label for="inputState" class="form-label">Horarios</label>
								</div>
								<div id="horarioContainer2">
									<div class="row">
										<div class="col-md-4">
											<label class="form-label">Día</label>
											<select class="form-control" name="dia${horarioCount}">
												<option value="Lunes">Lunes</option>
												<option value="Martes">Martes</option>
												<option value="Miércoles">Miércoles</option>
												<option value="Jueves">Jueves</option>
												<option value="Viernes">Viernes</option>
												<option value="Sábado">Sábado</option>
												<option value="Domingo">Domingo</option>
											</select>
										</div>
										<div class="col-md-3">
											<label class="form-label">Desde</label>
											<input type="time" class="form-control" name="desde${horarioCount}">
										</div>
										<div class="col-md-3">
											<label class="form-label">Hasta</label>
											<input type="time" class="form-control" name="hasta${horarioCount}">
										</div>
										<div class="col-md-2 align-self-end">
											<button type="button" class="btn btn-danger mt-2 m-1"
												onclick="removeHorario(this)"><i class="bi bi-x-circle"></i></button>
										</div>
									</div>
								</div>
								<button type="button" class="btn btn-primary mt-4" id="agregarHorario2">Agregar
									Horario</button>
							</div>
						</div>

						{{!-- -------------------------------------------- --}}
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
							<button class="btn btn-primary submit-button" type="submit">Guardar</button>
						</div>
					</form>

				</div>

			</div>
		</div>
	</div>


	<!-- endPageContent -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
