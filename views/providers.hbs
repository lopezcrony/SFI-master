	<script src="js/sweetalert2.min.js"></script>
	<script src="js/main.js"></script>

	<!-- Form validation -->
	<script src="js/scripts.js"></script>

	<script>
		document.addEventListener("DOMContentLoaded", function () {
			var addButton1 = document.getElementById("agregarHorario");
			var addButton2 = document.getElementById("agregarHorario2");

			var horarioCounts = [1, 1]; // Mantén un contador para cada formulario

			addButton1.addEventListener("click", function () {
				addHorario("horarioContainer", horarioCounts[0]);
				horarioCounts[0]++;
			});

			addButton2.addEventListener("click", function () {
				addHorario("horarioContainer2", horarioCounts[1]);
				horarioCounts[1]++;
			});

			function addHorario(containerId, count) {
				var container = document.getElementById(containerId);
				var div = document.createElement("div");
				div.className = "row";

				div.innerHTML = `
                <div class="col-md-4">
                    <label class="form-label">Día</label>
                    <select class="form-control" name="dia${count}">
                        <option value="Lunes">Lunes</option>
                        <option value="Martes">Martes</option>
                        <option value="Miércoles">Miércoles</option>
                        <option value="Jueves">Jueves</option>
                        <option value="Viernes">Viernes</option>
                        <option value="Sábado">Sábado</option>
                        <option value="Domingo">Domingo</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Desde</label>
                    <input type="time" class="form-control" name="desde${count}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Hasta</label>
                    <input type="time" class="form-control" name="hasta${count}">
                </div>
                <div class="col-md-2 align-self-end">
                    <button type="button" class="btn btn-danger mt-2 m-1" onclick="removeHorario(this)"><i class="bi bi-x-circle"></i></button>
                </div>
            `;

				container.appendChild(div);
			}

			function removeHorario(button) {
				var horarioDiv = button.closest(".row"); // Buscar el div que contiene el horario
				horarioDiv.remove(); // Eliminar el div del horario
			}
		});
	</script>








</body>

</html>