	<script>
		const guardarBotonrol = document.getElementById("guardarBotonrol");
		guardarBotonrol.addEventListener("click", function () {
			Swal.fire({
				position: "top-center",
				icon: "success",
				title: "¡Rol creado exitosamente!",
				showConfirmButton: false,
				timer: 1500
			});
		});
		const editarBotonrol = document.getElementById("editarBotonrol");
		editarBotonrol.addEventListener("click", function () {
			Swal.fire({
				position: "top-center",
				icon: "success",
				title: "¡Rol editado exitosamente!",
				showConfirmButton: false,
				timer: 1500
			});
		});
		const botonBorrarRol = document.getElementsByName("botonBorrarRol");

		for (let i = 0; i < botonBorrarRol.length; i++) {
			botonBorrarRol[i].addEventListener("click", function () {
				// Código a ejecutar cuando se hace clic en cualquier botón "borrarBoton"
				const swalWithBootstrapButtons = Swal.mixin({
					customClass: {
						confirmButton: "btn btn-success",
						cancelButton: "btn btn-danger"
					},
					buttonsStyling: false
				});
				swalWithBootstrapButtons.fire({
					title: "Estas seguro?",
					text: "Esta acción no se puede deshacer.",
					icon: "warning",
					showCancelButton: true,
					confirmButtonText: "Si, eliminar!",
					cancelButtonText: "No, cancelar!",
					reverseButtons: true

				}).then((result) => {
					if (result.isConfirmed) {
						swalWithBootstrapButtons.fire({
							title: "Eliminado!",
							text: "El rol a sido eliminado.",
							icon: "success"

						});
					} else if (
						result.dismiss === Swal.DismissReason.cancel
					) {
						swalWithBootstrapButtons.fire({
							title: "Cancelado",
							text: "El proceso ha sido cancelado",
							icon: "error"
						});
					}
				});
			});
		}
	</script>

