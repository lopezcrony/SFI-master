                                                <td>
                                                    <button class="btn btn-success p-2 " data-bs-toggle="modal"
                                                        data-bs-target="#viewModal"><i class=" bi bi-eye-fill"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>002</td>
                                                <td>carol</td>
                                                <td>6/07/2024</td>
                                                <td>428765445</td>
                                                <td>colanta</td>
                                                <td>40.000</td>
                                                <td>
                                                    <button class="btn btn-success p-2" data-bs-toggle="modal"
                                                        data-bs-target="#viewModal">
                                                        <i class="bi bi-eye-fill"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </div>
                <!-- End of Main Content -->
            </div>
            <!-- End of Content Wrapper -->
        </div>

    </section>

    {{!-- --------------------------------------------MODAL CREATE------------------------------------------ --}}
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Nueva Compra</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3">
                        <div class="col-md-6">
                            <label for="inputPhone" class="form-label">Fecha de ingreso</label>
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="inputState" class="form-label"></label>
                                    <input type="date" id="start-time" class="form-control">
                                </div>
                            </div>
                            <div class="col-6">
                                <label for="inputName" class="form-label">Nro. factura</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="col-md-6">
                                <label for="inputSeller" class="form-label">Proveedor</label>
                                <input type="text" class="form-control" id="Seller">
                            </div>
                            <div class="col-12">
                                <label for="inputAddress" class="form-label">Valor compra</label>
                                <input type="text" class="form-control" id="Address">
                            </div>
                            <div class="col-12">
                                <label for="inputAddress" class="form-label">registrar producto <a href="/categories"
                                        class="btn btn-primary text"><i class="bi bi-plus-lg"></i></a></label>
                            </div>
                        </div>
                </div>


                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Guardar</button>
                </div>
            </div>

        </div>
    </div>

    {{!-- ------------------------------------------- MODAL VER DETALLE --------------------------------------------
    --}}
    <div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Detalle compra</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3">
                        <div class="col-md-6">
                            <label for="inputPhone" class="form-label">Usuario : crony</label>
                        </div>
                        <div class="col-6">
                            <label for="inputName" class="form-label">fecha:23/01/2024</label>
                        </div>
                        <div class="col-md-6">
                            <label for="inputSeller" class="form-label">Nro.factura:234543223</label>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Proveedor: colanto</label>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Valor de compra :20.000</label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        </div>
                </div>
            </div>


            </form>

        </div>

    </div>
    </div>

    <!-- endPageContent -->
