                            <button class="btn btn-primary submit-button" type="button">Guardar</button>
                        </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- ------------------------------------------- MODAL VER DETALLE ---------------------------------------------}}
    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">

        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Detalle compra</h1>
