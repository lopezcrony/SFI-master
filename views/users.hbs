	{{!-- --------------------------------------------MODAL CREATE (Añadir)-------------------------------------------}}
	<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Añadir Usuario</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">

					<form class="needs-validation row g-3 form" novalidate>

						<div class="col-6">
							<label for="inputName" class="form-label">Nombre<span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="nombre" required pattern="[A-Za-z\s]+">
							<div class="invalid-feedback">
								Por favor ingresa un nombre válido.
							</div>
						</div>
						<div class="col-6">
							<label for="inputName" class="form-label">Apellido<span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="apellido" required pattern="[A-Za-z\s]+">
							<div class="invalid-feedback">
								Por favor ingresa un apellido válido.
							</div>
						</div>
						<div class="col-md-6">
							<label for="inputSeller" class="form-label">Seleccione su tipo de documento<span
									class="text-danger">*</span></label>
							<select class="form-select" id="tiposId" required>
								<option value="opcion1">Cédula de ciudadania</option>
								<option value="opcion2">Cédula de extranjería</option>
								<option value="opcion2">Tarjeta de identidad</option>
							</select>
						</div>
						<div class="col-md-6">
							<label for="inputSeller" class="form-label">Número de documento<span
									class="text-danger">*</span></label>
							<input type="text" class="form-control" id="cédula" required pattern="^\d{5,10}$">
							<div class="invalid-feedback">
								Por favor ingresa un número de documento válido.
							</div>
						</div>
						<div class="col-6">
							<label for="inputName" class="form-label">Teléfono<span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="teléfono" required pattern="\d{7,10}">
							<div class="invalid-feedback">
								Por favor ingresa un teléfono válido.
							</div>
						</div>
						<div class="col-md-6">
							<label for="inputSeller" class="form-label">Correo<span class="text-danger">*</span></label>
							<input type="text" class="form-control" id="correo" required
								pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$">
							<div class="invalid-feedback">
								Por favor ingresa un correo válido.
							</div>
						</div>
						<div class="col-md-6">
							<label for="inputPhone" class="form-label">Contraseña<span
									class="text-danger">*</span></label>
							<input type="password" class="form-control" id="password" required
								pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,16}$">
							<div class="invalid-feedback">
								Por favor ingresa una contraseña válida.
							</div>
						</div>
						<div class="col-md-6">
							<label for="inputPhone" class="form-label">Confirmar contraseña<span
									class="text-danger">*</span></label>
							<input type="password" class="form-control" id="confirmPassword" required
								pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,16}$">
							<div class="invalid-feedback">
