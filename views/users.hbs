	<script>
		const guardarBotonUsuario = document.getElementById("guardarBotonUsuario");
		guardarBotonUsuario.addEventListener("click", function () {
    Swal.fire({
        position: "top-center",
        icon: "success",
        title: "¡Usuario añadido exitosamente!",
        showConfirmButton: false,
        timer: 1500
      });
});
	const editarBotonUsuario = document.getElementById("editarBotonUsuario");
			editarBotonUsuario.addEventListener("click", function () {
		Swal.fire({
			position: "top-center",
			icon: "success",
			title: "¡Usuario editado exitosamente!",
			showConfirmButton: false,
			timer: 1500
		});
	});
			const botonBorrarUsuario = document.getElementsByName("botonBorrarUsuario");

	for (let i = 0; i < botonBorrarUsuario.length; i++) {
		botonBorrarUsuario[i].addEventListener("click", function() {
			// Código a ejecutar cuando se hace clic en cualquier botón "borrarBoton"
			const swalWithBootstrapButtons = Swal.mixin({
				customClass: {
				confirmButton: "btn btn-success",
				cancelButton: "btn btn-danger"
				},
				buttonsStyling: false
			});
			swalWithBootstrapButtons.fire({
				title: "Estas seguro?",
				text: "Esta acción no se puede deshacer.",
				icon: "warning",
				showCancelButton: true,
				confirmButtonText: "Si, eliminar!",
				cancelButtonText: "No, cancelar!",
				reverseButtons: true

			}).then((result) => {
				if (result.isConfirmed) {
				swalWithBootstrapButtons.fire({
					title: "Eliminado!",
					text: "El usuario a sido eliminado.",
					icon: "success"

				});
				} else if (
				result.dismiss === Swal.DismissReason.cancel
				) {
				swalWithBootstrapButtons.fire({
					title: "Cancelado",
					text: "El proceso ha sido cancelado",
					icon: "error"
				});
				}
			});	
		});
	}
	</script>

